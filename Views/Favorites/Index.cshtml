@model List<NflTeamsSessionState.Models.Team>

<h2>My Favorite Teams</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<form asp-action="Delete" method="post">
    <button type="submit" class="btn btn-danger">Clear Favorites</button>
</form>

<ul class="list-group mt-3">
    @foreach (var team in Model)
    {
        <li class="list-group-item">
            @team.City @team.Name
        </li>
    }
</ul>

<p class="mt-3">
    <a asp-controller="Team" asp-action="Index" class="btn btn-secondary">Back to Team Selection</a>
</p>
